        <container  class="container">
          <div id="actualFormStuff">
          
              <h2 id="appleExperience">Join our wonderful customerbase today.</h2>

              <div class="dataForm"> <!--or some kind of class; maybe it should be the same as the login one-->
                <form action="/register_eingabe" method="POST"> 
                  
                  <p>
                    <div class="form-group row">
                      <label for="nutzername" class="col-form-label">
                      Username:</label> <input class="form-control" type="text" name="nutzername" required minlength="4" maxlength="16">
                    </div> 
                    <div class="form-group row">
                      <label for="email" class="col-form-label">
                      Email:</label> <input class="form-control" type="text" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
                    </div>
                    <div class="form-group row"> 
                      <label for="passwort" class="col-form-label">
                      Password:</label> <input class="form-control" type="password" name="passwort" required minlength="8" maxlength="32">
                    </div>
                    <div class="form-group row"> 
                      <label for="passwort_repeat" class="col-form-label">
                      Repeat password:</label> <input class="form-control" type="password" name="passwort_repeat" required minlength="8" maxlength="32">
                    </div>
                  </p>

                  <input type="submit" value="Register" class="btn">
                  <br> <%=nachricht%> <br>
                  <a href=/home><span class="glyphicon glyphicon-triangle-left"></span>back</a>

                </form>
              </div>
